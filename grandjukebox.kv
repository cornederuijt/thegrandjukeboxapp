        id: "screen_thanks"
        name: "screen_thanks"
        manager: "screen_manager"

<CustButton@Button>:
    font_size: 32
    background_normal:"greybutton.png"

<ScreenOne>:
    BoxLayout:
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source: "background2.png"
        spacing: 50
        padding: [100, 40, 100 ,40]
        orientation: "vertical"
        Label:
            font_size: 32
            text: "Kies een genre:"
        CustButton:
            text: "Disco"
            on_press:
                app.root.transition.direction = "left"
                app.root.transition.duration = 1
                app.root.current = "screen_two"
        CustButton:
            text: "Rock"
            on_press:
                app.root.transition.direction = "left"
                app.root.transition.duration = 1
                app.root.current = "screen_two"
        CustButton:
